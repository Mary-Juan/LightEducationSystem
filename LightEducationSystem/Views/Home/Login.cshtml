@using LightEducationSystem.ViewModels;
@model LoginViewModel
@{
    ViewData["CurrentNavItem"] ="(current)";
    
}

    <div class="container">
        <div class="row justify-content-center align-items-center my-5 py-5" >
            <div class="col-8">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Login" >
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                            <input asp-for="Email" type="text" class="form-control" id="email" placeholder="Enter Your Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

