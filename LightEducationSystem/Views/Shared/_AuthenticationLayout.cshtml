<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Learn Land</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="Authentication/layout.css" rel="stylesheet">
    <link href="Authentication/custom-style.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >
            <a class="navbar-brand" href="#">Learn Land</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Login" asp-controller="Home">Login <span class="sr-only">@ViewData["CurrentNavItem"]</span> </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Register" asp-controller="Home">Register  <span class="sr-only">@ViewData["CurrentNavItem"]</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Contact" asp-controller="Home">Contact  <span class="sr-only">@ViewData["CurrentNavItem"]</span></a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="pt-5 text-white text-center ">
            <h1 >Welcome to Learn Land</h1>
        </div>
    </header>


    <div class="col-xl-12" style="height:auto">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer class="footer bg-dark fixed-bottom">
        <div class="container">
            <p class="text-muted small mb-4 mb-lg-0">Learn Land has nothing less than Lala Land</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
