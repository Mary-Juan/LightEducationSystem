@using LightEducationSystem.ViewModels
@model ProfessorViewModel

@{
    Layout = "_ProfessorLayout";
    ViewData["ProfessorName"] = Model.UserName;
}

<div class="album py-5  courses">
    <div class="container">
        <div class="d-flex justify-content-between flex-wrap align-items-baseline">
            @foreach (var course in Model.TrainingCourses)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" width="160" height="160" src=/imgs/@course.ImageName>
                        <h1 class="text-center">@course.Title</h1>
                        <div class="card-body">
                            <p class="card-text">@course.Detail</p>
                            <p>Capacity: <span class="badge bg-secondary">@course.Capacity</span></p>
                            <p>Remaining Capacity: <span class="badge bg-secondary">@course.RemainingCapacity</span></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="GetStudentsOfTrainingCourse" asp-controller="Professor" asp-route-trainingCourseId=@course.Id  class="btn btn-sm btn-custom mx-1">View Students</a>
                                    <a  class="btn btn-sm btn-outline-secondary" disabled>Edit</a>
                                </div>
                                <small class="text-muted">@course.TotalTime</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>