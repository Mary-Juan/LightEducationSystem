@using LightEducationSystem.ViewModels;
@model TrainingCourseViewModel

@{
    Layout = "_ProfessorLayout";
    ViewData["ProfessorName"] = Model.ProfessorName;
}

<div class="course-form p-4">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 form-container">
            <h2 class="text-center">Add Training Course</h2>
                <form method="post" enctype="multipart/form-data" asp-action="AddTrainingCourse">
                    <span>@ViewData["ControllerMessages"]</span>
                    <input hidden asp-for="Id" />
                    <input hidden asp-for="ProfessorId" />
                <div class="form-group" >
                    <label asp-for="Title"></label>
                    <input asp-for="Title" type="text" class="form-control" id="title" placeholder="Enter course title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                    <div class="form-group">
                        <label asp-for="Detail"></label>
                        <input asp-for="Detail" type="text" class="form-control" id="Detail" placeholder="Enter course Detail">
                    </div>
                <div class="form-group">
                    <label asp-for="Capacity"></label>
                    <input asp-for="Capacity"  class="form-control" id="capacity" placeholder="Enter capacity">
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>
                    <div class="d-flex form-group">
                        <div class="w-50">
                            <label asp-for="EndTime"></label>
                            <input asp-for="EndTime" type="time" class="form-control" id="time" placeholder="Enter End Time">
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>
                        <div class="w-50">
                            <label asp-for="StartTime"></label>
                            <input asp-for="StartTime" type="time" class="form-control" id="time" placeholder="Enter Start Time">
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>
                        
                    </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" type="file" class="form-control-file" id="image" t>
                </div>
                    
                    <button type="submit" class="btn btn-secondary my-2">Add</button>
            </form>
        </div>
    </div>
</div>
</div>
